
@model IEnumerable<Customer>

@{
    ViewData["Title"] = "Create an Account";
}

<div class="dashboard-content">
    <h5>Customer List</h5>

    <table class="table">
      <thead class="thead-dark">
        <tr>
          <th scope="col">#</th>
          <th scope="col">First Name</th>
          <th scope="col">Last Name</th>
          <th scope="col">Acc No.</th>
          <th scope="col">Acc Type</th>
          <th scope="col">Gender</th>
          <th scope="col">Mobile</th>
          <th scope="col">Email</th>
          <th scope="col">DOB</th>
          <th scope="col">Status</th>
        </tr>
      </thead>

    <tbody>
            @{
                int i = 0;
            }
            @foreach (var obj in Model)
            {
                <tr>
                    <td>@i</td>
                    <td>@obj.FirstName</td>
                    <td>@obj.LastName</td>
                    <td>@obj.AccNo</td>
                    <td>@obj.AccType</td>
                    <td>@obj.Gender</td>
                    <td>@obj.Mobile</td>
                    <td>@obj.Email</td>
                    <td>@obj.DOB</td>
                    <td>@obj.Status</td>

                    <td>
                        <a asp-controller="Customer" asp-action="Edit" asp-route-id="@obj.CustomerID" >Edit</a>
                        <a asp-controller="Customer" asp-action="Delete" asp-route-id="@obj.CustomerID" >Delete</a>
                    </td>
                </tr>

                i++;
            }
    </tbody>
    </table>
</div>
